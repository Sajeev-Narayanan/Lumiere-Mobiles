      <div class="row justify-content-center">
        <div class="col-lg-6 text-center">
          <div class="section-title">
            <h1>New Arrival</h1>
          </div>
        </div>
      </div>
      <div class="row">
        <!-- single product -->
        <% for(products of product){ %> 
        <div class="col-lg-3 col-md-6">

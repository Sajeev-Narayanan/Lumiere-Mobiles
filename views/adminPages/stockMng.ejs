<% layout('./layout/boilerplateAdmin') %> <%-
include('../partials/adminSideBar') %> <%- include('../partials/adminNavbar') %>
<div class="clearfix"></div>
<div class="content-wrapper">
  <div class="container-fluid">
    <div class="col-lg-12">
      <div class="card">
        <div class="card-body">
          <div
            class="d-flex flex-row justify-content-between align-items-center mb-3"
          >
            <h5 class="card-title">STOCKS</h5>
          </div>
          <div class="table-responsive">
            <table class="table table-striped table-hover">
              <thead>
                <tr>
                  <th scope="col">#</th>
                  <th scope="col">Product</th>
                  <th scope="col">Stock</th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
                <% let i=1;for(data of product){ %>
                <tr>
                  <td><%= i %></td>
                  <td><%= data.product_name %></td>
                  <td>
                    <% for( stk of stock){ %><% let pid=stk.productId.toString()
                    %><% let id = data._id.toString() %> <%if(pid===id ){%> <%=
                    stk.stock %> <% } %> <% }%>
                  </td>
                  <td>
                    <div>
                      <form
                        action="/admin/addStock/<%= data._id %>"
                        method="post"
                      >
                        <input
                          type="text"
                          name="product_Id"
                          value="<%= data._id %> "
                          hidden
                        />
                        <input
                          type="text"
                          name="productName"
                          value="<%= data.product_name %> "
                          hidden
                        />
                        <input
                          type="number"
                          name="stock"
                          style="
                            background: none;
                            border: solid 1px white;
                            border-radius: 5px;
                            height: 40px;
                            color: white;
                          "
                        />
                        <input
                          type="submit"
                          value="Add Stock"
                          class="customButton-white mt-2"
                        />
                      </form>
                      <!-- <a href="" class="customButton-white"></a> -->
                    </div>
                  </td>
                </tr>
                <% i++} %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


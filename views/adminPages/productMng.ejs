<% layout('./layout/boilerplateAdmin') %> <%-
include('../partials/adminSideBar') %> <%- include('../partials/adminNavbar') %>
<div class="clearfix"></div>
<div class="content-wrapper">
  <div class="container-fluid">
    <div class="col-lg-12">
      <div class="card">
        <div class="card-body">
          <div
            class="d-flex flex-row justify-content-between align-items-center mb-3"
          >
            <h5 class="card-title">PRODUCTS</h5>
            <a href="/admin/addProduct" class="customButton-white"
              >ADD PRODUCT</a
            >
          </div>
          
          <div class="table-responsive">
            <table class="table table-striped table-hover" id="table">
              <thead>
                <tr>
                  <th scope="col">#</th>
                  <th scope="col">Name</th>
                  <th scope="col">Brand</th>
                  <th scope="col">price</th>
                  <th scope="col">discount</th>
                  <th scope="col">category</th>
                  <th scope="col">description</th>
                  <th scope="col"></th>
                  <!-- <th scope="col">Heading</th>
                  <th scope="col">Heading</th> -->
                </tr>
              </thead>
              <tbody>
                <% let i=1; for(value of productFind){ %>
                  <% if(value.deleted== false){ %> 

                <tr>
                  <th scope="row"><%= i %></th>
                  <td><%=value.product_name%></td>
                  <td><%=value.brand[0].brand%></td>
                  <td><%= value.price %></td>
                  <td><%= value.discount %>%</td>
                  <td><%=value.category[0].category%></td>
                  <td><div style=" width: 250px;height:  100px;
                    overflow-x: scroll;"><%= value.description %></div></td>
                  <td>
                    <a
                      href="/admin/editProductGet/<%= value._id %>"
                      class="btn btn-warning mb-3"
                      >Edit</a
                    >

                    <form
                      action="/admin/deleteProduct/<%= value._id %>?_method=DELETE"
                      method="post"
                    >
                      <button class="btn btn-danger" id="edit">Delete</button>
                    </form>
                  </td>
                </tr>
                <% } %> 
                <%i++ } %>
              </tbody>
            </table>
          </div>
         
               </div>
      </div>
    </div>
  </div>
</div>
<script src="https://code.jquery.com/jquery-3.5.1.js"></script>

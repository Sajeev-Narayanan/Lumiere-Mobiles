<% layout('./layout/boilerplateAdmin') %> <%-
include('../partials/adminSideBar') %> <%- include('../partials/adminNavbar') %>
<div class="clearfix"></div>
<div class="content-wrapper">
  <div class="container-fluid">
    <div class="col-lg-12">
      <div class="card">
        <div class="card-body">
          <div
            class="d-flex flex-row justify-content-between align-items-center mb-3"
          >
            <h5 class="card-title">BRANDS</h5>
            <div>
              <!-- <h5>Vertically Centered</h5> -->
              <!-- <p>
                Add <code>.modal-dialog-centered</code> to
                <code>.modal-dialog</code> to vertically center the modal.
              </p> -->
              <button
                type="button"
                class="customButton-white"
                data-toggle="modal"
                data-target="#exampleModalCenter"
              >
                ADD BRAND
              </button>
              <div class="text-danger"><%= message %></div>
            </div>
          </div>
          <div class="table-responsive">
            <table class="table table-striped table-hover">
              <thead>
                <tr>
                  <th scope="col">#</th>
                  <th scope="col">Brands</th>
                </tr>
              </thead>
              <tbody>
                <% let i=1; for(let datas of brands) {%>
                <tr>
                  <th scope="row"><%= i %></th>
                  <td><%= datas.brand %></td>
                </tr>
                <% i++ } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Modal -->
<div
  class="modal fade"
  id="exampleModalCenter"
  tabindex="-1"
  role="dialog"
  aria-labelledby="exampleModalCenterTitle"
  aria-hidden="true"
>
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalCenterTitle">ADD BRAND</h5>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body modal-body-2">
        <form action="/admin/addBrand" method="post">
          <input type="text" name="brand" class="form-control-2" required/>

          <button type="submit" class="btn btn-outline-primary">
            Add Brand
          </button>
        </form>
      </div>
      <div class="modal-footer">
        <button
          type="button"
          class="btn btn-outline-secondary"
          data-dismiss="modal"
        >
          Close
        </button>
      </div>
    </div>
  </div>
</div>
